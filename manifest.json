{
  "name": "Gitmoji Browser Extension",
  "version": "1.8.1",
  "description": "The Gitmoji extension to easily search and copy gitmojis ðŸ˜œ",
  "manifest_version": 3,
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon96.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+G"
      },
      "description": "Open the gitmoji popup"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/*/pull/*",
        "https://gitlab.com/*/*/-/merge_requests/*"
      ],
      "js": [
        "injectMergeGitmoji.js"
      ]
    }
  ]
}